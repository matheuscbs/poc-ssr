  "main": "index.js",
  "scripts": {
    "build:client": "webpack --config webpack.config.js",
    "build:server": "webpack --config webpack.server.js",
    "build": "npm run build:client && npm run build:server",
    "start": "node dist/server.js",
    "watch:client": "webpack --config webpack.config.js --watch",
    "watch:server": "nodemon --watch src/server --exec 'webpack --config webpack.server.js && node dist/server.js'",
    "dev": "npm run build && concurrently \"npm run watch:client\" \"npm run watch:server\"",
    "dev:client": "webpack-dev-server --config webpack.config.js --open",
    "dev:server": "nodemon dist/server.js"
  },
